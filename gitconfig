[alias]
        ci = commit
        co = checkout
        dc = diff --cached
        ff = pull --ff-only
        st = status --short --branch
        top = log -1 --stat
        topp = log -1 --stat -p
        l = log --decorate
        ll = log --graph --all --decorate --oneline
        la = log --graph --all --decorate --stat
        lbr = branch --sort=-committerdate --verbose
[push]
	default = upstream
[core]
	excludesfile = ~/.gitignore
[checkout]
	defaultRemote = origin
